<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="카테고리"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/report_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="신고 날짜"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/report_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:textSize="18dp"
        android:text="신고자 이메일" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/post_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_up_border"
            android:text="게시글 확인"
            android:textColor="@color/mainColor_up" />

        <Button
            android:id="@+id/report_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_down_border"
            android:textColor="@color/mainColor_down"
            android:text="신고처리"/>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#bbbbbb"/>

</LinearLayout>
