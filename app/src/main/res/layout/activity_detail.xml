<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainColor_up"
        app:titleTextColor="#ffffff"
        app:title="POST"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Title Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/fontColor"
                    android:src="#ffffff"/>

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/fontColor"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/bookmark_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_bookmark_border" />

                <ImageView
                    android:id="@+id/popup_menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <!--Content ImageView-->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"
                android:textColor="@color/fontColor"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"/>


            <ImageView
                android:id="@+id/image_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <TextView
                    android:id="@+id/local_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="#지역"
                    android:textColor="@color/mainColor_up"/>

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textSize="18sp"
                    android:text="#시간"
                    android:textColor="@color/mainColor_down"/>

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:textSize="15sp"
                    android:text="업로드 날짜"
                    android:gravity="right"
                    android:textColor="@color/fontColor"/>
            </LinearLayout>

            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="18sp"
                android:text="사진 내용"
                android:textColor="@color/fontColor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#bbbbbb"/>

            <!--이모티콘-->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/sunmono"/>
                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/rainmono"/>
                    <ImageView
                        android:id="@+id/icon_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/happymono"/>
                    <ImageView
                        android:id="@+id/icon_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:src="@drawable/cloudmono"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/icon_1_count"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/fontColor"
                        android:textSize="22sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/icon_2_count"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/fontColor"
                        android:textSize="22sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/icon_3_count"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/fontColor"
                        android:textSize="22sp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/icon_4_count"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/fontColor"
                        android:textSize="22sp"
                        android:gravity="center"/>

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/report"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="신고하기"
                android:textColor="@color/mainColor_down"
                android:background="@drawable/button_down_border"
                android:layout_gravity="right"
                android:layout_margin="8dp"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>